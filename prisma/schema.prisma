// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  password      String
  name          String?
  role          String          @default("USER") // USER, ADMIN
  theme         String          @default("light") // light, dark
  plan          String          @default("FREE") // FREE, BASIC, PRO
  planExpiresAt DateTime?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  links         Link[]
  categories    Category[]
  linkTemplates LinkTemplate[]
  tickets       Ticket[]
  payments      Payment[]
}

model Link {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  originalUrl String
  shortCode   String    @unique
  title       String?
  description String?
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  utmTerm     String?
  utmContent  String?
  password    String?
  expiresAt   DateTime?
  isActive    Boolean   @default(true)
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  clicks      Click[]
}

model Category {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  color       String?  @default("#3b82f6")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  links       Link[]
}

model LinkTemplate {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  utmTerm     String?
  utmContent  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Click {
  id         String   @id @default(cuid())
  linkId     String
  link       Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  ip         String?
  userAgent  String?
  referer    String?
  deviceType String   @default("UNKNOWN") // MOBILE, DESKTOP, TABLET, UNKNOWN
  os         String?
  browser    String?
  createdAt  DateTime @default(now())
}

model Ticket {
  id          String        @id @default(cuid())
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  subject     String
  description String
  status      String        @default("OPEN") // OPEN, IN_PROGRESS, RESOLVED, CLOSED
  priority    String        @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  category    String?       // technical, billing, feature, other
  assignedTo String?        // Admin user ID
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  replies     TicketReply[]
}

model TicketReply {
  id        String   @id @default(cuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId    String   // User or Admin who replied
  message   String
  isAdmin   Boolean  @default(false) // Whether reply is from admin
  createdAt DateTime @default(now())
}

model Payment {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan          String   // FREE, BASIC, PRO
  amount        Int      // Amount in Rials
  authority     String?  // NovinoPay authority
  transId       String?  // NovinoPay transaction ID
  refId         String?  // Bank reference ID
  status        String   @default("PENDING") // PENDING, SUCCESS, FAILED, VERIFIED
  invoiceId     String?  // Internal invoice ID
  cardPan       String?  // Masked card number
  buyerIp       String?
  paymentTime   DateTime?
  verifiedAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

