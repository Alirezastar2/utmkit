// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  password      String
  name          String?
  role          String          @default("USER") // USER, ADMIN
  theme         String          @default("light") // light, dark
  plan          String          @default("FREE") // FREE, BASIC, PRO
  planExpiresAt DateTime?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  links         Link[]
  categories    Category[]
  linkTemplates LinkTemplate[]
  tickets       Ticket[]
  payments      Payment[]
  webhooks      Webhook[]
  reports       ScheduledReport[]
  ownedTeams    Team[]          @relation("TeamOwner")
  teamMembers   TeamMember[]     @relation("TeamMembers")
  customDomains CustomDomain[]
}

model Link {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  originalUrl String
  shortCode   String    @unique
  title       String?
  description String?
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  utmTerm     String?
  utmContent  String?
  password    String?
  expiresAt   DateTime?
  maxClicks   Int?      // Maximum number of clicks allowed
  isActive    Boolean   @default(true)
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  clicks      Click[]
  teamLinks   TeamLink[]
}

model Category {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  color       String?  @default("#3b82f6")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  links       Link[]
}

model LinkTemplate {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  utmTerm     String?
  utmContent  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Click {
  id         String   @id @default(cuid())
  linkId     String
  link       Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  ip         String?
  userAgent  String?
  referer    String?
  deviceType String   @default("UNKNOWN") // MOBILE, DESKTOP, TABLET, UNKNOWN
  os         String?
  browser    String?
  country    String?  // Country code (e.g., IR, US)
  city       String?  // City name
  createdAt  DateTime @default(now())
}

model Ticket {
  id          String        @id @default(cuid())
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  subject     String
  description String
  status      String        @default("OPEN") // OPEN, IN_PROGRESS, RESOLVED, CLOSED
  priority    String        @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  category    String?       // technical, billing, feature, other
  assignedTo String?        // Admin user ID
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  replies     TicketReply[]
}

model TicketReply {
  id        String   @id @default(cuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId    String   // User or Admin who replied
  message   String
  isAdmin   Boolean  @default(false) // Whether reply is from admin
  createdAt DateTime @default(now())
}

model Payment {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan          String   // FREE, BASIC, PRO
  amount        Int      // Amount in Rials
  authority     String?  // NovinoPay authority (legacy - برای سازگاری)
  transId       String?  // Transaction ID / RefNumber
  refId         String?  // NovinPal refId / Bank reference ID
  status        String   @default("PENDING") // PENDING, SUCCESS, FAILED, VERIFIED
  invoiceId     String?  // Internal invoice ID / order_id
  cardPan       String?  // Masked card number
  buyerIp       String?
  paymentTime   DateTime?
  verifiedAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Webhook {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  url         String
  events      String   // Comma-separated: click,link_created,link_updated,link_deleted
  secret      String?  // Secret for webhook signature
  isActive    Boolean  @default(true)
  lastTrigger DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ScheduledReport {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  frequency   String   // daily, weekly, monthly
  dayOfWeek   Int?     // 0-6 for weekly (0 = Sunday)
  dayOfMonth  Int?     // 1-31 for monthly
  time        String   // HH:mm format
  format      String   @default("email") // email, pdf, both
  linkIds     String?  // Comma-separated link IDs, null = all links
  email       String?  // Email to send report to
  isActive    Boolean  @default(true)
  lastSent    DateTime?
  nextSend    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Team {
  id          String        @id @default(cuid())
  name        String
  ownerId     String
  owner       User          @relation("TeamOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members     TeamMember[]
  sharedLinks TeamLink[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation("TeamMembers", fields: [userId], references: [id], onDelete: Cascade)
  role      String   @default("VIEWER") // OWNER, ADMIN, EDITOR, VIEWER
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([teamId, userId])
}

model TeamLink {
  id        String   @id @default(cuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  linkId    String
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([teamId, linkId])
}

model CustomDomain {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  domain      String   @unique
  verified    Boolean  @default(false)
  verificationToken String
  dnsRecords  String?  // JSON string of DNS records needed
  sslEnabled  Boolean  @default(false)
  sslCert     String?  // SSL certificate
  sslKey      String?  // SSL private key
  isActive    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  verifiedAt  DateTime?
}

